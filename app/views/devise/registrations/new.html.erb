<div class='signup'>
 <h2 class='signup__heading'>Sign up</h2>

  <div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class='signup__form'>
    <%= render "devise/shared/error_messages", resource: resource %>
    <
      <%= f.text_field :name, autocomplete: "name",placeholder:'Name',class:"signup__field",class:"signup__field" %>
      <%= f.text_area :bio, autocomplete: "name",placeholder:'Bio' ,class:'signup__bio signup__field'%>
      <%= f.email_field :email, autofocus: true,placeholder:'Email', autocomplete: "email",class:"signup__field" %>
      <%= f.email_field :email, autofocus: true,placeholder:'Confirm Email',autocomplete: "email",class:"signup__field" %>
      <%= f.text_field :photo, autocomplete: "name" ,placeholder: 'Photo url',class:"signup__field"%>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password,placeholder:'Password',autocomplete: "new-password" ,class:"signup__field"%>
      <%= f.password_field :password_confirmation,placeholder:'Confirm password',autocomplete: "new-password",class:"signup__field"%>
  
      <%= f.submit "Sign up" ,class:'signup__submit'%>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>

 
</div>
