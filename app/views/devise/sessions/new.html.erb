<section class='login'>
  <h2 class='login--header'>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class='login__form'>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: 'Email',class: "field"%>

    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password',class: "field"%>


  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</section>

